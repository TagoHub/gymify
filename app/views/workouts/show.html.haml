.title 
  %h1= @workout.name
  = link_to edit_program_workout_path(@program, @workout), class: "btn btn-outline-primary btn-sm" do
    %i.bi.bi-pencil.h5
  = link_to start_workout_program_workout_path(@program, @workout), class: "btn btn-outline-success btn-sm" do
    %i.bi.bi-play.h5
  = link_to preview_program_workout_path(), class: "btn btn-outline-primary btn-sm" do
    %i.bi.bi-eyeglasses.h5
.show
  %table
    %tr
      %td.label Goal
      %td.value= @workout.goal
    %tr
      %td.label Rest Days
      %td.value= @workout.rest_days
    %tr
      %td.label Exercises
      %td.value= @workout.exercise_groups.sort_by(&:order).flat_map(&:exercises).map(&:name).join(", ")
    %tr
      %td.label Total Exercises
      %td.value= @workout.exercises.count
    %tr
      %td.label Created At
      %td.value= l(@workout.created_at, format: :long)
    %tr
      %td.label Updated At
      %td.value= l(@workout.updated_at, format: :long)
  = link_to 'Exercises', program_workout_exercises_path(@program, @workout), class: "btn"