.scroll-container
  .scroll-row
    - @select_options.each do |mg|
      = link_to mg.name, exercise_templates_path(muscle_group: mg.id), class: mg == @muscle_group ? "btn btn-outline-primary btn-md me-2" : "btn btn-primary btn-md me-2"
.scroll-container
  .scroll-row
    - @muscle_group.muscles.each do |m|
      = link_to m.name, exercise_templates_path(muscle_group: @muscle_group.id, muscle: m.id), class: m == @muscle ? "btn btn-outline-secondary btn-md me-2" : "btn btn-secondary btn-md me-2"

