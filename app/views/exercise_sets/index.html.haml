.title
  %h1= @exercise.name
  - if current_user.programs.include?(@program) 
    = link_to quick_sets_creation_program_workout_exercise_path(@program, @workout, @exercise), class:  "btn btn-outline-primary btn-sm" do
      %i.bi.bi-plus.h4
.index
  %table
    %thead
      %tr
        %th Order
        %th Set Type
        %th Reps
        %th Load
        %th Intensity Technique
        %th Suggested Intensity
        %th Intensity
        %th Actions
    %tbody
      - @exercise_sets.each do |exercise_set|
        %tr
          %td= exercise_set.order
          %td= exercise_set.set_type
          %td= exercise_set.reps
          %td= [exercise_set.load, exercise_set.unit.abbreviation].join(" ")
          %td= exercise_set.intensity_technique&.name
          %td= exercise_set.suggested_intensity
          %td= exercise_set.intensity
          %td.actions
            = link_to program_workout_exercise_exercise_set_path(@program, @workout, @exercise, exercise_set), class: "btn" do
              %i.bi.bi-eye
            - if current_user.programs.include?(@program) 
              = link_to edit_program_workout_exercise_exercise_set_path(@program, @workout, @exercise, exercise_set), class: "btn" do
                %i.bi.bi-pencil
              = button_to duplicate_program_workout_exercise_exercise_set_path(@program, @workout, @exercise, exercise_set), "method": :post, "confirm": "Duplicate this set?", class: "btn link" do
                %i.bi.bi-copy
              = button_to program_workout_exercise_exercise_set_path(@program, @workout, @exercise, exercise_set), method: :delete, data: { confirm: "Are you sure?" }, class: "btn delete link" do
                %i.bi.bi-trash